 #include<stdio.h>
 int main(){
   int a;
   int b;
   int n;
   printf("enter the operation which you want to perform 1.Relational\n 2. logical \n 3. bitwise \n 4. assignment \n 5. increment decrement operators ");
   scanf("%d",&n);
   printf("enter thr value of a:");
   scanf("%d",&a);
   printf("enter the value of b:");
   scanf("%d",&b);
   int m;
   int i;
   int j;
   int k;
   int l;
   switch(n){
      case 1:
      
      printf("enter 1. > \n 2. < \n 3. <= \n4. >= \n5. ==\n 6.!=");
      scanf("%d",&m);
      switch(m){
         case 1:
         if(a>b){
            printf("a is greater then b");
         }
         else {
            printf("b is greater then a");
            break;
         }
         case 2:
         if(a<b){
            printf("b is greater than a");

         }
         else{
            printf("a is greater then b");
         }
         break;
         case 3:
         if(a<=b){
            printf("a is less than equal to b");
         }
         else {
            printf("b is less than equal to a");
         }
         break;
         case 4:
         if(a>=b){
            printf("a is greater then equal to b");
         }
         else{
            printf("b is grater then equal to a");
         }
         break;
         case 5:
         if(a==b){
            printf("a is equal to b");
         }
         else {
            printf("a is not equal to b");
         }
         break;
         case 6:
         if(a!=b){
            printf("a is not equal to b");
         }
         else{
            printf("a is equal to b");
         }
         break;
      }
      break;
      case 2:
    
      printf("enter 1.&& \n 2. ||\n 3. !");
      scanf("%d",&i);
      switch(i){
         case 1:
         if(a==0&&b==0){
            printf("a and b both are zero");
         }
         else{
            printf("a or b not equal to zero");
         }
         case 2:
         if(a==0||b==0){
            printf("either a is equal to zero or b will be equal to zero");
         }
         case 3:
         if(a!=b){
            printf("a is not equal to b");

         }
         else {
            printf("a is equal to b");
         }
      }
      break;
      case 3:
      printf("enetr 1.&\n2.|\n3.~");
      scanf("%d",&j);
      switch(j){
        case 1:
        printf("%d",a&b);
        break;
        case 2:
        printf("%d",a|b);
        break;
        case 3:
        printf("for a:%d",~a);
        printf("for b:%d",~b);
        break;
      }
      case 4:
      printf("enter 1.+=\n2.-=\n3.*=\n4./=");
      scanf("%d",&k);
      switch(k){
        case 1:
        printf("a+=%d",a+=b);
        break;
        case 2:
        printf("-=%d",a-=b);
        break;
        case 3:
        printf("*=%d",a*=b);
        break;
        case 4:
        printf("/=%d",a/=b);
        break;
      }
      break;
      case 5:
      printf("enter 1.++a\n2.--a\n3.a++\n4.a--");
      scanf("%d",&l);
      switch(l)
      {
      case 1:
      printf("++a:%d",++a);
      break;
      case 2:
      printf("--a:%d",--a);
      break;
      case 3:
      printf("a++:%d",a++);
      break;
      case 4:
      printf("a--:%d",a--);
      break;
      }


      
   }
   return 0;
 }
